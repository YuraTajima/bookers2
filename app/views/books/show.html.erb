
<h2>User info</h2>



<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label>Opinion</label>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>


<h2>Book detail</h2>
 <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= book.body %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <% if @book.user == current_user %>
       <td><%= link_to 'Destroy', book, method: :delete, "data-confirm" => "Are you sure?" %></td>
      <% end %>
    </tr>
<% end %>