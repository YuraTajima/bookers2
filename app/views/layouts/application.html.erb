<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
     <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navber navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
        <span class="navbar-brand">
          <a href="https://d4c608845735411687784abebf1e958f.vfs.cloud9.ap-northeast-1.amazonaws.com/">Bookers</a>
        </span>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="true" aria-label="Toggle navigation">
            <span class="navber-toggler-icon"></span>
          </button>
          <div class="navbar-collapse collapse show" id="navbarNavDropdown" style>
            <ul class="navbar-nav ml-auto">
            <% if user_signed_in? %>
            <li class="nav-link text-light">
              <%= link_to user_path(current_user.id) do %>
              <i class="fas fa-home"></i>Home
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%=  link_to users_path do %>
              <i class="fas fa-users"></i>Users
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to books_path do %>
              <i class="fas fa-book-open"></i>Books
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to destroy_user_session_path, method: :delete do %>
              <i class="fas fa-sign-out"></i>Log out
              <% end %>
            </li>
            <% else %>
            <li class="nav-link text-light">
              <%= link_to root_path do %>
              <i class="fas fa-home"></i>Home
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to about_path do %>
              <i class="fas fa-link"></i>About
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to new_user_registration_path do %>
              <i class="far fa-user-plus"></i>Sign up
              <% end %>
            </li>
            <li class="nav-link text-light">
              <%= link_to new_user_session_path do %>
              <i class="fas fa-sign-in-alt"></i>Log in
              <% end %>
            </li>
            <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
  
  
    <%= yield %>
    
    
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto">
          <p>CopyRight Infratop.inc</p>
        </div>
      </div>
    </div>
  </footer>
  </body>
</html>
