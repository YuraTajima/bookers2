<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag current_user.get_profile_image(100,100) %>
        
        <table class="table">
          <tbody>
            <tr>
              <th>Name</th>
              <th><%= current_user.name %></th>
            </tr>
        
            <tr>
              <th>Introduction</th>
              <th><%= current_user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
            <%= link_to "プロフィール編集", edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' %>
        </div>

        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <div class="form-group">
          <label>Title</label>
          <input class="form-control book_title" type="text" name="book[title" id="book_title">
        </div>

        <div class="form-group">
          <label>Opinion</label>
          <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>

        <div class="form-group">
        <%= f.submit 'Create Book' %>
        </div>
        <% end %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tobody>
            <% @users.each do |current_user| %>
            <tr>
              <th><%= image_tag current_user.get_profile_image(80,80) %></th>
              <th><%= current_user.name %></th>
              <th>show</th>
            </tr>
            <% end %>
          </tobody>
        </table>
      </div>
    </div>
  </div>
</main>