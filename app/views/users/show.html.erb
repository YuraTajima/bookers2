<main>
  <div class="container px-5 px-sm-0">
    <div class="row">
      <div class="col-md-3">
        <h2>User info</h2>
        <%= image_tag @user.get_profile_image(100,100) %>
        
        <table class="table">
          <tbody>
            <tr>
              <th>Name</th>
              <th><%= @user.name %></th>
            </tr>
        
            <tr>
              <th>Introduction</th>
              <th><%= @user.introduction %></th>
            </tr>
          </tbody>
        </table>
        <div class="row">
          <% if @user.id == current_user.id %>
            <%= link_to "プロフィール編集", edit_user_path(current_user), class: 'btn btn-outline-secondary btn-block' %>
          <% end %>
        </div>

        <h2 class="mt-3">New book</h2>

        <%= form_with model: @book, url: '/books', method: :post do |f| %>
        <div class="form-group">
          <label>Title</label>
          <input class="form-control book_title" type="text" name="book[title]" id="book_title">
        </div>

        <div class="form-group">
          <label>Opinion</label>
          <textarea class="form-control book_body" name="book[body]" id="book_body"></textarea>
        </div>

        <div class="form-group">
        <%= f.submit 'Create Book' %>
        </div>
        <% end %>
      </div>
      
      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tobody>
            <% @books.each do |book| %>
            <tr>
              <th>
                <%= link_to user_path do %>
                <%= image_tag @user.get_profile_image(80,80) %>
                <% end %>
              </th>
              <th>
                <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
              </th>
              <th><%= book.body %></th>
            </tr>
            <% end %>
          </tobody>
        </table>
      </div>
    </div>
  </div>
</main>