<h2>User info</h2>

<p>Name</p>
<p><%= @user.name %></p>
<p>Introduction</p>
<h3><%= @user.introduction %></h3>

<% if @user.id == current_user.id %>
  <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
<% end %>

<h2>New book</h2>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
<div class="field">
  <label>Title</label>
  <%= f.text_field :title %>
</div>

<div class="field">
  <label>Opinion</label>
  <%= f.text_area :body %>
</div>

<div class="actions">
  <%= f.submit 'Create Book' %>
</div>
<% end %>

<h2>Books</h2>

<p>Title</p>
<p>Opinion</p>

